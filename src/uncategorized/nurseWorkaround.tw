:: Nurse Workaround [silently]

<<if $Nurse != 0>>
	<<set _ID = $Nurse.ID, _SL = $slaves.length>>
	<<for _i = 0; _i < _SL; _i++>>
		<<if (_ID == $slaves[_i].ID)>>
			<<removeJob $slaves[_i] "be the Nurse">>
			<<break>>
		<</if>>
	<</for>>
<</if>>
<<if $i > -1>>
	<<assignJob $slaves[$i] "be the Nurse">>
	<<set $slaves[$i].livingRules = "luxurious">>
	<<set $Nurse = $slaves[$i]>>
<<else>>
	<<set $Nurse = 0>>
<</if>>

<<goto "Clinic">>

