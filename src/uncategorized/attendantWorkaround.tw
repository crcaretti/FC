:: Attendant Workaround [silently]

<<if $Attendant != 0>>
	<<set _ID = $Attendant.ID, _SL = $slaves.length>>
	<<for _i = 0; _i < _SL; _i++>>
		<<if (_ID == $slaves[_i].ID)>>
			<<removeJob $slaves[_i] "be the Attendant">>
			<<break>>
		<</if>>
	<</for>>
<</if>>
<<if $i > -1>>
	<<assignJob $slaves[$i] "be the Attendant">>
	<<set $slaves[$i].livingRules = "luxurious">>
	<<set $Attendant = $slaves[$i]>>
<<else>>
	<<set $Attendant = 0>>
<</if>>

<<goto "Spa">>

