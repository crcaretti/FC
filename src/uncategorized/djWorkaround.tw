			<<set $HeadGirl to 0>>
		<</if>>
		<<if $slaves[$i].ID is $Recruiter.ID>>
			<<set $Recruiter to 0>>
		<</if>>
		<<if $slaves[$i].ID is $Bodyguard.ID>>
			<<set $Bodyguard to 0>>
		<</if>>
		<<break>>
	<</if>>
	<</for>>



<<goto "Club">>
