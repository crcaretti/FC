:: Concubine Workaround [silently]

<<if $Concubine != 0>>
	<<set _ID = $Concubine.ID, _SL = $slaves.length>>
	<<for _i = 0; _i < _SL; _i++>>
		<<if (_ID == $slaves[_i].ID)>>
			<<removeJob $slaves[_i] "be your Concubine">>
			<<break>>
		<</if>>
	<</for>>
<</if>>
<<if $i > -1>>
	<<assignJob $slaves[$i] "be your Concubine">>
	<<set $slaves[$i].livingRules = "luxurious">>
	<<set $Concubine = $slaves[$i]>>
<<else>>
	<<set $Concubine = 0>>
<</if>>

<<goto "Master Suite">>

