:: accordionStyleSheet [stylesheet]
/* Accordion 000-250-006 */

button.accordion {
    cursor: pointer;
    padding: 5px;
    width: 100%;
    margin-bottom: 10px;
    border-bottom: 3px double;
    border-right: 3px double;
    border-left: none;
    border-top: none;
    text-align: left;
    outline: none;
    transition: 0.4s;
    background-color: transparent;
}

button.accordion.active, button.accordion:hover {
    background-color: transparent;
}

button.accordion:before {
    content: '\002B';
    color: #777;
    font-weight: bold;
    float: left;
    margin-right: 5px;
}

button.accordion.active:before {
    content: "\2212";
}

.accHidden {
    padding: 0 18px;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.2s ease-out;
}
