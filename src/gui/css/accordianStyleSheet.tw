:: accordionStyleSheet [stylesheet]
/* Accordion 000-250-006 */

@import url('https://fonts.googleapis.com/css?family=Share+Tech|Share+Tech+Mono');

.passage h1 {
    font-family: 'Share Tech Mono', monospace;
    text-align: right;
}


button.buttonBar {
    cursor: pointer;
    padding: 5px;
    width: 100%;
    margin-bottom: 10px;
    border-bottom: 2px double grey;
    border-right: none;
    border-left: none;
    border-top: none;
    border-radius: 2px;
    text-align: left;
    outline: none;
    background-color: transparent;
    font-weight: 900;
}

button.accordion.active {
    background-color: transparent;
}

button.accordion:hover {
    background-color: #2E2E2E;
}

button.accordion:before {
    content: '\002B';
    color: #777;
    font-weight: bold;
    float: left;
    margin-right: 5px;
}

button.accordion.active:before {
    content: "\2212";
}

button.accordion:after {
    content: attr(data-after);
    float: right;
    margin-left: 2em;
    font-weight: normal;
    color: green;
}

.unStaffed {
    background-color: transparent;
    padding: .5em .2em;
    margin-bottom: 1em;
    border-bottom: 2px double grey;
}

.unStaffed:before {
    content: '\00D7';
    color: #777;
    font-weight: bold;
    color: red;
    float: left;
    margin-right: 5px;
}


.accHidden {
    padding: 0 18px;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.2s ease-out;
}

.macro-include {
    clear: both;
}